
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for product images and brochures
    match /public/{allPaths=**} {
      allow read: if true;
      // Only admins can write/update in the public bucket folder
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Fallback: deny writes by default
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
