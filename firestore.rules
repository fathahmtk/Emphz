rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read for marketing content (products, projects, downloads)
    match /{document=**} {
      allow read: if true;

      // Writes only for authenticated admins (use custom claim "admin": true)
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
